    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@300&display=swap" rel="stylesheet">
</head>

<body class="mainpag">
    <%- include('partials/header') %>
        <div class="">




            <h1 class="text-center">CafeScript</h1>

            <form method="POST" action="/users/actualizar/<%=id%>?_method=PUT" class="container">
                <h2 class="text-dark text-center">Actualiza tus datos</h2>

                <div class="container_form--div">

                    <label>Nombre</label>
                    <input type="text" class="text-light" id="nombre" name="name" value="<%=  name  %>">

                    <i></i>
                </div>
                <div class="container_form--div">

                    <label>Apellido</label>
                    <input type="text" id="apellido" class="text-light" name="apellido" value="<%= apellido  %>">
                    <i></i>
                </div>
                <div class="container_form--div">

                    <label>Email</label>
                    <input type="email" id="email" class="text-light" name="email" value="<%=  email  %>">

                    <i></i>

                </div>

                <div class="container_form--div">
                    <label>Telefono</label>
                    <input type="tel" id="tel" class="text-light" name="telefono" value="<%= telefono  %>">
                    <i></i>
                </div>
                <!-- <div class="container_form--div">
                    <label>Contraseña</label>
                    <input type="password" id="pass" class="text-light" name="password" ">
                    <i></i>
                </div>
                <div class=" container_form--div">
                    <label>Confirmar contraseña</label>
                    <input type="password" id="confirmPass" class="text-light" name="confirmPass">
                    <i></i>
                </div> -->

                <button type=" submit" class="btn btn-success m-3" value="Register">actualizar</button>
            </form>
        </div>



        <img src="/images/banner-mercadopago.png" alt="banner-bottom" class="img-fluid banner-bottom">



        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous"></script>
</body>

</html>